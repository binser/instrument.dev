{% extends '::base.html.twig' %}

{% block title %}Наши услуги{% endblock %}
{% block description %}Страница - Наши услуги{% endblock %}
{% block keywords %}{% endblock %}

{% block content %}
    <div class="container" id="services_block">
        {% if services %}
            <table class="table table-striped">
            <tbody>
            {% for service in services %}
                <tr>
                    <th scope="row">
                        <a href="{{ path('binser_instrument_service_post', {'link': service.link}) }}">
                            {{ service.title }}
                        </a>
                    </th>
                    <td class="text-center">
                        {{ service.price }} РУБ.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
        {% else %}
            <div class="alert alert-info">
                Ни одной услуги не добавлено
            </div>
        {% endif %}
    </div>
{% endblock %}